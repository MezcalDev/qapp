<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="qapp.Cuestions"
			 Title="Questions">

	<ContentPage.Content>
		<StackLayout VerticalOptions="StartAndExpand">
		    <Label Text=""/><Label Text=""/><Label Text=""/>
		    <Label Text=""/><Label Text=""/><Label Text=""/>

		    <Label Text="Questions"
		    Font="Large"
		    HorizontalOptions="Center"
		    XAlign="Center"
		    Rotation="-15"
		    IsVisible="true"
		    VerticalOptions="CenterAndExpand"
		    FontAttributes="Bold"
		    TextColor="Red"/>

		    <Label Text=""/><Label Text=""/><Label Text=""/>
		    <Label Text=""/><Label Text=""/><Label Text=""/>

			<Label Text="Username" TextColor="Blue"/>
			<Entry x:Name="questions" Placeholder="question" />

		

			<Button x:Name="loginButton" Text="Save" Clicked="OnSignIn" />
			<Button Text="Sign Up" Clicked="OnRegister" />

			<Label x:Name="messageLabel" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>