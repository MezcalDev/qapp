<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="qapp.Register"
			 Title="Sign Up">
	<ContentPage.Content>
		<StackLayout VerticalOptions="StartAndExpand">
		    <Label Text=""/><Label Text=""/><Label Text=""/>
		    <Label Text=""/><Label Text=""/><Label Text=""/>


		    <Label Text="New User"
		    Font="Large"
		    HorizontalOptions="Center"
		    XAlign="Center"
		    Rotation="-15"
		    IsVisible="true"
		    VerticalOptions="CenterAndExpand"
		    FontAttributes="Bold"
		    TextColor="Red"/>

		    <Label Text=""/><Label Text=""/><Label Text=""/>
		    <Label Text=""/><Label Text=""/><Label Text=""/>

			<Label Text="email" TextColor="Blue"/>
			<Entry x:Name="usernameNew" Placeholder="username"/>

			<Label Text="Password" TextColor="Blue"/>
			<Entry x:Name="passwordNew" Placeholder="password" IsPassword="true" />

			<Label Text="Confirm Password" TextColor="Blue"/>
			<Entry x:Name="ConfirmPassword" Placeholder="Confirm password" IsPassword="true" />

			<Button x:Name="registerButton" Text="Sign Up" Clicked="OnRegister"/>


		</StackLayout>
	</ContentPage.Content>
</ContentPage>