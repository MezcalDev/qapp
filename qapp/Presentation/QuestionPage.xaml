<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="qapp.QuestionPage"
			 Title="Question">
	<ContentPage.Content>
		<StackLayout VerticalOptions="StartAndExpand">
		    <Label Text=""/><Label Text=""/><Label Text=""/>
		    <Label Text=""/><Label Text=""/><Label Text=""/>


		    <Label Text="Question"
		    Font="Large"
		    HorizontalOptions="Center"
		    XAlign="Center"
		    Rotation="-15"
		    IsVisible="true"
		    VerticalOptions="CenterAndExpand"
		    FontAttributes="Bold"
		    TextColor="Red"/>

		    <Label Text=""/><Label Text=""/><Label Text=""/>
		    <Label Text=""/><Label Text=""/><Label Text=""/>

			<Label Text="Add question" TextColor="Blue"/>
			<Entry x:Name="question" Placeholder="question" />

		

			<Button x:Name="saveButton" Text="Save" Clicked="OnSave" />


			<Label x:Name="messageLabel" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>